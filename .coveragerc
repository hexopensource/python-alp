[paths]
source =
   src/alp
   */site-packages/alp

[run]
branch = True
source = alp
parallel = true

[report]
show_missing = true
precision = 2
omit = *migrations*
exclude_lines =
    pragma: no cover
    raise Exception
    except Exception as e:
    except Exception:
    raise NotImplementedError
    except MemoryError
    raise TypeError